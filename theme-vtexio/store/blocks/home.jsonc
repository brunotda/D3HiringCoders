{
  "store.home": { 
    "blocks": [
      "list-context.image-list#topbanner",
      "__fold__",
      "search-result-layout.customQuery#homeproducts"
    ]
  },
  "list-context.image-list#topbanner": {
    "children": ["slider-layout#topsite"],
    "props": {
      "preload": true,
      "height": 650,
      "images": [
        {
          "image": "assets/banners/BANNER-WOOD.png",
          "description": "Wood Sport Festival - Troféu com personalização grátis"
        },
        {
          "image": "assets/banners/BANNER-GUERREIROS.png",
          "description": "Grandes Guerreiros"
        }
      ]
    }
  },
  "slider-layout#topsite": {
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "fullWidth": false,
      "infinite": true,
      "showNavigationArrows": "always",
      "showPaginationDots": "always",
      "blockClass": "carousel"
    }
  }
}